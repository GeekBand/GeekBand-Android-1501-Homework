<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_comment_item"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/listitem_comment_iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_avatar_border"
            android:src="@drawable/img_default_avatar" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/listitem_comment_iv_avatar" >

            <TextView
            	android:id="@+id/listitem_comment_tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-1dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="未设置昵称" />

            <TextView
            	android:id="@+id/listitem_comment_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentBottom="true"
                android:padding="0dp"
                android:textColor="#ff6600"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/listitem_comment_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="65dp"
        android:paddingRight="11dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:textColor="#000000" />
</LinearLayout>