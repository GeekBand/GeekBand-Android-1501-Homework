<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8fff4"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/listitem_travel_notes_llyt_time_line"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#f8fff4"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="5dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="@color/main_green"
            android:visibility="gone" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_time_line_circle" />

        <TextView
            android:id="@+id/listitem_travel_notes_tv_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="12月"
            android:textColor="#999999"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/listitem_travel_notes_tv_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:gravity="center|top"
            android:text="30日"
            android:textColor="#999999"
            android:textSize="10sp" />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/main_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listitem_travel_notes_iv_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitStart"
        	fresco:placeholderImage="@drawable/bg_default_photo" />

        <TextView
            android:id="@+id/listitem_travel_notes_tv_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="#f8fff4" />
    </LinearLayout>

</LinearLayout>