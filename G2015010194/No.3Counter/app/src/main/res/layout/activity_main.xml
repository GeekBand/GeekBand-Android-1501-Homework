<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Team A" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:id="@+id/textView_a"/>
    <View
        android:layout_width="1dp"
        android:layout_height="300dp"
        android:background="#403a37"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:layout_alignTop="@+id/view"
        android:layout_toRightOf="@+id/view"
        android:layout_toEndOf="@+id/view"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:id="@+id/textView_b"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/score_a"
        android:textSize="54sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_a"
        android:layout_marginLeft="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/score_b"
        android:textSize="54sp"
        android:gravity="center"
        android:layout_alignTop="@+id/score_a"
        android:layout_marginLeft="260dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="+3 POINTS"
        android:id="@+id/button_a3"
        android:layout_below="@+id/score_a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="+2 POINTS"
        android:id="@+id/button_a2"
        android:layout_below="@+id/button_a3"
        android:layout_alignLeft="@+id/button_a3"
        android:layout_alignStart="@+id/button_a3" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="FREE THROW"
        android:id="@+id/button_a0"
        android:layout_below="@+id/button_a2"
        android:layout_alignLeft="@+id/button_a2"
        android:layout_alignStart="@+id/button_a2" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="+3 POINTS"
        android:id="@+id/button_b3"
        android:layout_alignTop="@+id/button_a3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="+2 POINTS"
        android:id="@+id/button_b2"
        android:layout_below="@+id/button_b3"
        android:layout_alignLeft="@+id/button_b3"
        android:layout_alignStart="@+id/button_b3" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="FREE THROW"
        android:id="@+id/button_b0"
        android:layout_alignBottom="@+id/button_a0"
        android:layout_alignLeft="@+id/button_b2"
        android:layout_alignStart="@+id/button_b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button_reset"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_a0"
        android:layout_toEndOf="@+id/button_a0" />


</RelativeLayout>
