<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:orientation="vertical">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="2"
        android:id="@+id/root">
        <TextView
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:id="@+id/teamA"
            android:textSize="20sp"/>
        <TextView
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:id="@+id/teamB"
            android:textSize="20sp"/>

        <TextView
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:id="@+id/aCounter"
            android:textColor="#ff0000"
            android:text="0"/>
        <TextView
           android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:id="@+id/bCounter"
            android:textColor="#0000cd"
            android:text="0"/>

        <Button
            android:text="+3 POINTS"
            android:layout_gravity="left"
            android:id="@+id/a3Points"
            android:background="#ffd700"
            android:layout_margin="5dp"/>
        <Button
            android:text="+3 POINTS"
            android:layout_gravity="right"
            android:id="@+id/b3Points"
            android:background="#ffd700"
            android:layout_margin="5dp"/>

        <Button
            android:text="+2 POINTS"
            android:layout_gravity="left"
            android:id="@+id/a2Points"
            android:background="#6a5acd"
            android:layout_margin="5dp"/>
        <Button
            android:text="+2 POINTS"
            android:layout_gravity="right"
            android:id="@+id/b2Points"
            android:background="#6a5acd"
            android:layout_margin="5dp"/>

        <Button
            android:text="FREE THROW"
            android:layout_gravity="left"
            android:id="@+id/a1Points"
            android:background="#32cd32"
            android:layout_margin="5dp"/>
        <Button
            android:text="FREE THROW"
            android:layout_gravity="right"
            android:id="@+id/b1Points"
            android:background="#32cd32"
            android:layout_margin="5dp"/>

        <Button
            android:text="RESET"
            android:layout_columnSpan="2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/resetButton"
            android:background="#ffa500"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"/>

    </GridLayout>


</LinearLayout>
